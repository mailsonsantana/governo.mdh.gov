<?xml version="1.0"?>
<object name="portal_controlpanel"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    i18n:domain="governo.mdh.portal"
    purge="False">
  <configlet title="Portal Ministerio dos Direitos Humanos"
      action_id="mdh"
      appId="governo.mdh.portal"
      category="Products"
      condition_expr=""
      url_expr="string:${portal_url}/@@mdh-settings"
      icon_expr="string:${portal_url}/++resource++governo.mdh.portal/imgs-static/planalto-icon.png"
      visible="True"
      i18n:attributes="title">
      <permission>governo.mdh.portal: Setup</permission>
 </configlet>

 <configlet title="Arquivos Corrompidos - Portal MDH"
      action_id="broken-files"
      appId="broken-files"
      category="Products"
      condition_expr=""
      url_expr="string:${portal_url}/@@broken-files"
      icon_expr="string:${portal_url}/++resource++governo.mdh.portal/imgs-static/file_broken.png"
      visible="True"
      i18n:attributes="title">
      <permission>governo.mdh.portal: Setup</permission>
 </configlet>
</object>
